
     <a href="/posts/create" role="button" class="btn btn-primary">Create</a>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Action</th>
   
    </tr>
  </thead>
  <tbody>
    {{#each posts}}
   <tr>
      <th scope="row">{{this.id}}</th>
      <td colspan="2">{{this.title}}</td>
      <td>{{this.description}}</td>
      <td>
          <a href="/posts/details/:id" role="button" class="btn btn-info">Details</a>
          <a href="/posts/edit/:id" role="button" class="btn btn-warning">Edit</a>
          <a href="/posts/delete/:id" role="button" class="btn btn-danger">Delete</a>
      </td>
    </tr>
    {{/each }}
    </tbody>
</table>